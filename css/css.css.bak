* {
	box-sizing: border-box;
}
.bar {
	width: 100%;
	height: 50px;
	background-color: #2E8B57 ;
	display: block;
	position:fixed;
	bottom: 100%;
	margin-bottom:-50px;
}
.btnbar {
	position: relative;
	background-color: #3CB371;
	margin-left:-4px;
	left:4px;
	height:50px;
	width:120px;
	border-radius: 0px;
	border: 0 solid red;
	border-left: 1px solid black;
}
.btnbarright{
	border-right: 1px solid black;
}
.btnbar:hover {
	background-color: #319163;
	transition: 0.1s;
	font-size: 15px;
}
.faceimg {
	position: relative;
	left:5%;
	display:inline-block;
	margin-top: 70px;
	width: 100%;
	height: 300px;
}
.tizertext {
	display:inline-block;
	margin-left:50%;
	 vertical-align: top;
}
h1 {
	font-style:italic;
	margin-top:120px;
	font-size:40px;
	text-align: center;
}
h3{font-size:30px; font-style:italic;}
.photo{
	width:500px;
	height:300px;
}
.content {
	padding: 50px 0;
	margin-top: 50px;
	background-color: rgba(211, 211, 211,0.2);
	width:100%;
}
.textcard {
	padding: 25px 20px 70px 20px;
	display:inline-block;
	margin-left:150px;
	border: 1px solid black;
	box-shadow: 0 0 10px;
}
.card {
	width: 150px;
	height: 150px;
	background-color: red;
}
